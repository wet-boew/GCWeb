<form action="https://google.ca/search" method="get" role="search" class="form-inline">
	<div class="form-group">
		<label for="wb-srch-q" class="wb-inv">{{#i18n "%tmpl-search-site"}}{{/i18n}}</label>
		<input id="wb-srch-q" class="wb-srch-q form-control" name="q" type="search" value="" size="27" maxlength="150" placeholder="{{#i18n "%tmpl-search-placeholder"}}{{/i18n}}" />
		<input type="hidden" name="q" value="site:gc.ca OR site:canada.ca" />
	</div>
	<div class="form-group submit">
		<button type="submit" id="wb-srch-sub" class="btn btn-primary btn-small"><span class="glyphicon-search glyphicon"></span><span class="wb-inv">{{#i18n "%tmpl-search"}}{{/i18n}}</span></button>
	</div>
</form>
